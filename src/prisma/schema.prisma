generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  EMPLOYEE
  SUPERVISOR
  HR_ADMIN
  BOARD
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PROBATION
}

enum LeaveType {
  ANNUAL
  SICK
  UNPAID
  SPECIAL
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum VacancyStatus {
  DRAFT
  OPEN
  CLOSED
}

enum ApplicationStatus {
  APPLIED
  SHORTLISTED
  INTERVIEWED
  OFFERED
  REJECTED
  HIRED
}

enum PayrollStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum DocumentType {
  PASSPORT
  ID
  CERTIFICATE
  CONTRACT
  OTHER
}

// Models
model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  role       Role      @default(EMPLOYEE)
  employee   Employee? @relation(fields: [employeeId], references: [id])
  employeeId String?   @unique
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Employee {
  id                   String                @id @default(uuid())
  employeeNumber       String?               @unique
  firstName            String
  lastName             String
  email                String                @unique
  phone                String?
  status               EmployeeStatus        @default(ACTIVE)
  hireDate             DateTime?
  contracts            Contract[]
  documents            Document[]
  disciplinaryRecords  DisciplinaryRecord[]
  salaryStructures     SalaryStructure[]
  trainings            TrainingHistory[]
  attendances          Attendance[]
  leaveRequests        LeaveRequest[]
  leaveBalances        LeaveBalance[]
  evaluations          Evaluation[]
  payslips             Payslip[]
  user                 User?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
}

model Contract {
  id           String   @id @default(uuid())
  employee     Employee @relation(fields: [employeeId], references: [id])
  employeeId   String
  title        String
  startDate    DateTime
  endDate      DateTime?
  fileUrl      String?
  publicId     String?
  mimeType     String?
  size         Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Document {
  id         String       @id @default(uuid())
  employee   Employee     @relation(fields: [employeeId], references: [id])
  employeeId String
  type       DocumentType
  name       String
  fileUrl    String
  publicId   String?
  mimeType   String?
  size       Int?
  expiresAt  DateTime?
  createdAt  DateTime     @default(now())
}

model DisciplinaryRecord {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  incident   String
  action     String
  date       DateTime
  createdAt  DateTime @default(now())
}

model Vacancy {
  id           String        @id @default(uuid())
  title        String
  department   String?
  status       VacancyStatus @default(DRAFT)
  description  String?
  createdAt    DateTime      @default(now())
  applications Application[]
}

model Application {
  id            String           @id @default(uuid())
  vacancy       Vacancy          @relation(fields: [vacancyId], references: [id])
  vacancyId     String
  candidateName String
  email         String
  phone         String?
  resumeUrl     String?
  publicId      String?
  mimeType      String?
  size          Int?
  score         Float?
  status        ApplicationStatus @default(APPLIED)
  createdAt     DateTime         @default(now())
  interviews    Interview[]
  offer         Offer?
}

model Interview {
  id            String      @id @default(uuid())
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String
  scheduledAt   DateTime
  interviewer    String
  result         String?
}

model Offer {
  id            String      @id @default(uuid())
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String      @unique
  salary        Float
  accepted      Boolean     @default(false)
  createdAt     DateTime    @default(now())
}

model Kpi {
  id          String   @id @default(uuid())
  name        String
  description String?
  weight      Float?
  createdAt   DateTime @default(now())
}

model Evaluation {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  kpiId      String?
  score      Float
  period     String
  notes      String?
  createdAt  DateTime @default(now())
}

model SalaryStructure {
  id            String   @id @default(uuid())
  employee      Employee @relation(fields: [employeeId], references: [id])
  employeeId    String
  baseSalary    Float
  allowances    Float?   @default(0)
  deductions    Float?   @default(0)
  effectiveFrom DateTime
  createdAt     DateTime @default(now())
}

model PayrollRun {
  id        String    @id @default(uuid())
  period    String
  runAt     DateTime  @default(now())
  status    PayrollStatus @default(PENDING)
  payslips  Payslip[]
}

model Payslip {
  id           String     @id @default(uuid())
  payrollRun   PayrollRun @relation(fields: [payrollRunId], references: [id])
  payrollRunId String
  employee     Employee   @relation(fields: [employeeId], references: [id])
  employeeId   String
  gross        Float
  net          Float
  fileUrl       String?
  publicId      String?
  mimeType      String?
  size          Int?
  generatedAt  DateTime   @default(now())
}

model StatutoryDeduction {
  id     String @id @default(uuid())
  name   String
  rate   Float
}

model Attendance {
  id         String           @id @default(uuid())
  employee   Employee         @relation(fields: [employeeId], references: [id])
  employeeId String
  date       DateTime
  status     AttendanceStatus
  clockIn    DateTime?
  clockOut   DateTime?
}

model LeaveRequest {
  id          String    @id @default(uuid())
  employee    Employee  @relation(fields: [employeeId], references: [id])
  employeeId  String
  type        LeaveType
  startDate   DateTime
  endDate     DateTime
  status      String
  createdAt   DateTime  @default(now())
}

model LeaveBalance {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  year       Int
  balance    Float
}

model Training {
  id         String   @id @default(uuid())
  title      String
  budget     Float?
  date       DateTime?
  skillId    String?
  skill      Skill?   @relation(fields: [skillId], references: [id])
  histories   TrainingHistory[]
}

model Skill {
  id       String    @id @default(uuid())
  name     String    @unique
  trainings Training[]
}

model TrainingHistory {
  id           String    @id @default(uuid())
  employee     Employee  @relation(fields: [employeeId], references: [id])
  employeeId   String
  training     Training  @relation(fields: [trainingId], references: [id])
  trainingId   String
  completedAt  DateTime?
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String?
  action    String
  entity    String
  entityId  String?
  details   Json?
  createdAt DateTime @default(now())
}
